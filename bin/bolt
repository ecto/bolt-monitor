#!/usr/bin/env node

var parser  = require('nomnom'),
    forever = require('forever');

parser.command('start')
   .callback(start)
   .help("start the bolt server");

parser.command('stop')
   .callback(stop)
   .help("stop the bolt server");

parser.parseArgs();

function start(){
  console.log('Starting bolt-server...');
  forever.startServer(__dirname + '/../mesh.js');
}

function stop(){
  console.log('Stopping bolt-server...');
  console.log(forever.list(, function(){
    console.log(arguments);
  }));
}
