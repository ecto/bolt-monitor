#!/usr/bin/env node

var parser  = require('nomnom'),
    forever = require('forever'),
    colors  = require('colors');

parser.command('start')
   .callback(start)
   .help("start the bolt server");

parser.command('stop')
   .callback(stop)
   .help("stop the bolt server");

parser.parseArgs();

function start(){
  if (process.env.USER != 'root') {
    console.log('I refuse to start without permission, good sir!'.red);
    console.log('Try: ' + 'sudo !!'.green);
  } else {
    console.log('Starting bolt-server...'.green);
    var file = __dirname + '/../mesh.js';
    forever.list(null, function(err, procs){
      var running = false;
      if (procs) {
        for (var i in procs) {
          if (procs[i].file == file) {
            running = true;
            break;
          }
        }
      }
      if (!running) forever.cli.start(file, {}, true);
      else console.log('Bolt is already running! I disincline to acquiesce to your request.'.red);
    });
  }
}

function stop(){
  console.log('Stopping bolt-server...');
  var file = __dirname + '/../mesh.js';
  forever.cli.stop(file);
}
